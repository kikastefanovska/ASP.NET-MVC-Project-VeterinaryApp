@{
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/Contact.css" asp-append-version="true"/>
    <title>Contact Us</title>
</head>

<body>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h1 class="contact-header">Contact Us</h1>
                <div class="contact-form-container">
                   <form>
                        <div class="form-group">
                            <label for="name">Your Name:</label>
                            <input type="text" id="name" name="name" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="surname">Your Surname:</label>
                            <input type="text" id="surname" name="surnname" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="email">Your Email:</label>
                            <input type="email" id="email" name="email" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="phone">Telephone:</label>
                            <input type="tel" id="phone" name="phone" pattern="[1-9]\d{2}-\d{3}-\d{4}" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="subject">Subject:</label>
                            <input type="text" id="subject" name="subject" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="message">Message:</label>
                            <textarea id="message" name="message" class="form-control"></textarea>
                        </div>
                        <input type="checkbox" name="terms" id="terms" required>
                        <label for="terms">
                            I agree to the privacy policy and terms of service.
                        </label>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
            <!-- Location Section -->
            <div class="col-md-6">
                <div class="location-container">
                    <div class="location-info">Our Location</div>
                    <p>
                        Visit us at:<br>
                        Karposh Street<br>
                        Karposh Bitola, Republic of Macedonia
                    </p>
                    <div class="map-container">
                       <iframe src="https://www.google.com/maps/embed?pb=!1m21!1m12!1m3!1d10124.356293272267!2d21.341356947480367!3d41.0254936540265!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!4m6!3e3!4m0!4m3!3m2!1d41.026677928184355!2d21.34377480044722!5e0!3m2!1sen!2smk!4v1705244743550!5m2!1sen!2smk" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe
                    </div>
                </div>
            </div>
                <div class="image">
                    <img src="~/images/pngwing.com (6).png"/>
                </div>
        </div>
    </div>

</body>

</html>

                    
           
                       
                   

