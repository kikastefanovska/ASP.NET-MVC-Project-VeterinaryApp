@model VeterinaryApp.Models.Owner

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Owner</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Owner:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Age)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class="col-sm-2">
            Pet Name:
        </dt>
        <dd class="col-sm-10">
            @foreach (var pet in Model.Pets)
            {
                <span>@pet.Name </span>
            }
        </dd>
    </dl>
      
</div>
<div>
    @* <a asp-action="Edit" asp-route-id="@Model?.OwnerId">Edit</a>  *@
    <form asp-action="Edit" asp-route-id="@Model?.OwnerId" method="post" style="display: inline;">
        <button type="submit" class="btn btn-primary">Edit</button>
    </form>
  <form asp-action="Index" method="get" style="margin-top: 20px;">
        <button type="submit" class="btn btn-secondary">Back to List</button>
    </form>
   @*  <a asp-action="Index">Back to List</a> *@
</div>
