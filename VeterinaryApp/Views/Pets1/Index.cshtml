@model IEnumerable<VeterinaryApp.Models.Pet>

@{
	ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/pets.css" asp-append-version="true" />

<p>
	@* <a asp-action="Create">Create New</a> *@
	<form asp-action="Create" method="get">
		<button type="submit" class="btn btn-success">Create New</button>
	</form>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Age)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Owner)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Vaccines)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Age)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Owner.FullName)
				</td>
				<td>
					@foreach (var vaccine in item.Vaccines)
					{
						<p>@vaccine.Name</p>
					}
				</td>
				@* <td>
					<a asp-action="Edit" asp-route-id="@item.PetId">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.PetId">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.PetId">Delete</a>
				</td> *@
				<td>
					<form asp-action="Edit" asp-route-id="@item.PetId" method="post" style="display: inline;">
						<button type="submit" class="btn btn-primary">Edit</button>
					</form>
					<form asp-action="Details" asp-route-id="@item.PetId" method="post" style="display: inline;">
						<button type="submit" class="btn btn-info">Details</button>
					</form>

					<form asp-action="Delete" asp-route-id="@item.PetId" method="post" style="display: inline;">
						<button type="submit" class="btn btn-danger">Delete</button>
					</form>
				</td>
			</tr>
		}
	</tbody>
</table>


<div class="image" style="position: absolute; bottom: 0px;">
	<img src="~/images/pngwing.com (1).png" />
</div>